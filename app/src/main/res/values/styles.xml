<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title" parent="TextAppearance.MaterialComponents.Headline4" >
        <item name="android:textSize">48dp</item>
        <item name="android:textColor">@color/green_app</item>
        <item name="fontFamily">@font/kanit</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>
    <style name="Header" parent="Title" >
        <item name="android:textSize">36dp</item>
    </style>
    <style name="Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2" >
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/green_app</item>
        <item name="fontFamily">@font/kanit</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>
    <style name="Subtitle.black" parent="Subtitle" >
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Subtitle.big" parent="Subtitle" >
        <item name="android:textSize">48dp</item>
    </style>
    <style name="Subtitle.bigBlack" parent="Subtitle.black" >
        <item name="android:textSize">18dp</item>
    </style>
    <style name="Subtitle.small" parent="Subtitle" >
        <item name="android:textSize">14dp</item>
    </style>
    <style name="Body" parent="TextAppearance.MaterialComponents.Body2" >
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/grey_text_body</item>
        <item name="fontFamily">@font/kanit</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>
    <style name="Body.green" parent="Body" >
        <item name="android:textColor">@color/green_app</item>
    </style>
    <style name="Body.linking" parent="Body" >
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>
    <style name="Body.small" parent="Body" >
        <item name="android:textSize">14dp</item>
    </style>
    <style name="WarningMessage" parent="Body" >
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>
    <style name="Button" parent="TextAppearance.MaterialComponents.Subtitle2" >
        <item name="android:textSize">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/kanit</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>
    <style name="Button.small" parent="Button">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="Button.smallRed" parent="Button">
        <item name="android:textSize">14dp</item>
        <item name="android:backgroundTint">@android:color/holo_red_light</item>
    </style>
    <style name="ChipSymptom" parent="Base.Widget.MaterialComponents.Chip" >
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="checkedIcon">@drawable/ic_mtrl_chip_checked_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/mtrl_choice_chip_background_color</item>
        <item name="rippleColor">@color/mtrl_choice_chip_ripple_color</item>
    </style>
    <style name="ChipType" parent="ChipSymptom" >
        <item name="chipStartPadding">10dp</item>
        <item name="textStartPadding">12dp</item>
        <item name="textEndPadding">10dp</item>
        <item name="chipEndPadding">10dp</item>
    </style>
    <style name="TextChip" parent="TextAppearance.MaterialComponents.Chip" >
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/kanit</item>
        <item name="fontFamily">@font/kanit</item>
    </style>
</resources>